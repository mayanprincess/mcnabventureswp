{# Side Component - Twig Template #}
<section class="side-component">
  <div class="side-component__inner">
    {# Logo Column #}
    <div class="side-pill">
      {% if logo %}
        <div class="logo-container">
          <img src="{{ logo }}" alt="{{ badge }}">
        </div>
      {% endif %}
    </div>
    
    {# Content Column #}
    <div class="side-main-content">
      {% if badge %}
        <span class="side-minitext">{{ badge }}</span>
      {% endif %}
      
      {% if content %}
        <div class="side-content">
          {{ content|raw }}
        </div>
      {% endif %}
      
      {% if description %}
        <p class="side-description">{{ description }}</p>
      {% endif %}
    </div>
  </div>
</section>
